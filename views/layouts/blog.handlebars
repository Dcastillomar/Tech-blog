<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>{{blog.name}} {{blog.date}}</h2>
            <h3>{{blog.text}}</h3>
        </div>
    </div>
</div>

<!-- Show comments -->
<div class="container">
    <h7>Comments:</h7>
    {{#each comments}}
    <div class="row mb-5">
        <div class="col-md-6">
            <h2>{{this.name}}</h2>
        </div>
        <div class="col-md-6">
            <h3>{{this.text}}</h3>
        </div>
    </div>
    {{/each}}
</div>

<!-- Comment form -->
<div class="container">
    <form id="comment-form">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" aria-describedby="nameInput">
        </div>
        <div class="form-group">
            <label for="comment">Comment:</label>
            <textarea class="form-control" id="text" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>