<html lang="en-us">

<head>
    <meta charset="utf-8">
    <title>Tech-Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
    <meta name="description" content="This is meta description">
    <meta name="author" content="Themefisher">

    <!-- # Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Neuton:wght@700&family=Work+Sans:wght@400;500;600;700&display=swap"
        rel="stylesheet">

    <!-- # Main Style Sheet -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="widget-blocks">
        <div class="row">
            <div class="col-lg-12">
                <div class="widget">
                    <div class="widget-body">
                        <h2 class="text-center">{{blog.name}}</h2>
                        <p class="text-center">{{blog.text}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="container" id="comments">
        <h6 class="post-title">Comments:</h6>
        <br>
        {{#each comments}}
        <div class="text-left">
            <h8>{{this.name}}</h8>
            <p class="card-text">{{this.text}}</p>
            <br>
        </div>
        {{/each}}
    </div>


    <div class="container">
        <form id="comment-form">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" aria-describedby="nameInput">
            </div>
            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea class="form-control" id="text" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </form>
    </div>

    <script src="/js/comment.js"></script>
</body>

</html>