<div class="container">
    <form id="blog-form">
        <div class="form-group">
            <label for="name">Title:</label>
            <textarea name="blogName" class="form-control" id="blogName" rows="1"></textarea>
        </div>
        <div class="form-group">
            <label for="date">Date:</label>
            <textarea name="blogDate" class="form-control" id="blogDate" rows="1"></textarea>
        </div>
        <div class="form-group">
            <label for="text">Text:</label>
            <textarea name="blogText" class="form-control" id="blogText" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script src="/js/dashboard.js"></script>
