<html lang="en-us">

<head>
    <meta charset="utf-8">
    <title>Tech-Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
    <meta name="description" content="This is meta description">
    <meta name="author" content="Themefisher">

    <!-- # Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Neuton:wght@700&family=Work+Sans:wght@400;500;600;700&display=swap"
        rel="stylesheet">

    <!-- # Main Style Sheet -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<div class="container">
    <form id="blog-form">
        <div class="form-group">
            <label for="name">Title:</label>
            <textarea name="blogName" class="form-control" id="blogName" rows="1"></textarea>
        </div>
        <div class="form-group">
            <label for="date">Date:</label>
            <textarea name="blogDate" class="form-control" id="blogDate" rows="1"></textarea>
        </div>
        <div class="form-group">
            <label for="text">Text:</label>
            <textarea name="blogText" class="form-control" id="blogText" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-outline-primary">Submit</button>
    </form>
</div>

<script src="/js/dashboard.js"></script>