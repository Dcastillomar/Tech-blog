<html lang="en-us">


<head>
    <meta charset="utf-8">
    <title>Tech-Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
    <meta name="description" content="This is meta description">
    <meta name="author" content="Themefisher">
    <!-- theme meta -->
    <meta name="theme-name" content="reporter" />


    <!-- # Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Neuton:wght@700&family=Work+Sans:wght@400;500;600;700&display=swap"
        rel="stylesheet">


    <!-- # Main Style Sheet -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<!-- blog container -->
<main>
    <section class="section">
        <div class="container">
            <div class="row no-gutters-lg">
                <div class="col-12">
                    <h2 class="section-title">Latest Articles</h2>
                </div>


                <div class="col-lg-12 mb-5 mb-lg-0">
                    <div class="row">
                        <div class="col-12 mb-4">
                            <article class="card article-card">
                                <div class="card-body px-0 pb-1">
                                    {{#each blogs}}
                                    <h2 class="h1"><a class="post-title" href="/blogs/{{this.id}}">{{this.name}}</a>
                                    </h2>
                                    <p class="card-text">{{this.text}}</p>
                                    <div class="content">
                                        <a class="read-more-btn" href="/blogs/{{this.id}}">Read Full Article</a>
                                    </div>
                                    {{/each}}
                                </div>
                            </article>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </section>
</main>




