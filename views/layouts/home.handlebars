<!-- blog container -->
<div class="container">
    <div class="title-container"></div>
    <h1>Blog</h1>
    <h4>Posts</h4>
</div>
<div class="container">
    <blockquote class="blockquote text-center">
        <p class="mb-0">
            {{#each blogs}}
        <div class="row mb-5">
            <div class="col-md-6">
                <h2>{{this.name}} {{this.date}}</h2>
            </div>
            <div class="col-md-6">
                <h3>{{this.text}}</h3>
            </div>
        </div>
        {{/each}}
        A well-known quote, contained in a blockquote element.</p>
        <footer class="blockquote-footer">Someone</footer>
    </blockquote>
    <!-- show comments -->
    <div class="container">
        <h7>Comments:</h7>
        <p class="mb-0">
            {{#each comments}}
        <div class="row mb-5">
            <div class="col-md-6">
                <h2>{{this.name}}</h2>
            </div>
            <div class="col-md-6">
                <h3>{{this.text}}</h3>
            </div>
        </div>
        {{/each}}
        </p>
    </div>
    <!-- comment form -->
    <form class="comment-form">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" aria-describedby="nameInput">
        </div>
        <div class="form-group">
            <label for="comment">Comment:</label>
            <textarea class="form-control" id="comment" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
