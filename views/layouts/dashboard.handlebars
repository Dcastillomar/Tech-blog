<html lang="en-us">

<head>
	<meta charset="utf-8">
	<title>Tech-Blog</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
	<meta name="description" content="This is meta description">
	<meta name="author" content="Themefisher">

	<!-- # Google Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">

	<link
		href="https://fonts.googleapis.com/css2?family=Neuton:wght@700&family=Work+Sans:wght@400;500;600;700&display=swap"
		rel="stylesheet">



	<!-- # Main Style Sheet -->
	<link rel="stylesheet" href="/css/style.css">
</head>
<div>
	<a href="/newpost"><button class="btn btn-primary" id="btn">Add a New Post</button> </a>
</div>


<div class="widget-blocks">
	<div class="row">
		<div class="col-lg-12">
			<div class="widget">
				<h4 class="text-center">My Posts:</h4>
				{{#each blogs}}
				<div class="widget-body">
					<h2 class="widget-title my-3"><a href="api/newpost/{{this.id}}">
							<h2 class="text-center">{{this.name}}</h2>
						</a></h2>
					<p class="text-center">{{this.text}}
						<a href="api/newpost/{{this.id}}" class="btn btn-sm btn-outline-primary">Click to
							edit</a>{{/each}}
					</p>
				</div>
			</div>
		</div>
	</div>
</div>



<script src="/js/dashboard.js"></script>